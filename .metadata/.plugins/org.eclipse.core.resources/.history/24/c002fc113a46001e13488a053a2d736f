#include "binary_msg.h"

void Add_Binary(uint8_t *num, MessageQ *pMsgQ) {
	for (uint8_t i=0; i<4; i++){
		pMsgQ[i] = 0;
	}

	if (*num & 0b0001) {
		pMsgQ[0] = 1;
	}
	if (*num & 0b0010) {
		pMsgQ[1] = 1;
	}
	if (*num & 0b0100) {
		pMsgQ[2] = 1;
	}
	if (*num & 0b1000) {
		pMsgQ[3] = 1;
	}
}
